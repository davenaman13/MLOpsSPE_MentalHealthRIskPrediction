pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/davenaman13/MLOpsSPE_MentalHealthRIskPrediction.git'
            }
        }
        stage('Build Images') {
            steps {
                sh 'docker-compose build'
            }
        }
        stage('Test') {
            steps {
                sh 'docker-compose up -d'
                sh 'curl -X POST http://localhost:5003'
            }
        }
    }
}
